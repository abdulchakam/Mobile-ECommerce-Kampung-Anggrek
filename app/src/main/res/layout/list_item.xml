<?xml version="1.0" encoding="utf-8"?>
<com.chinodev.androidneomorphframelayout.NeomorphFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_produk"
    android:layout_width="180dp"
    android:layout_height="250dp"
    app:neomorph_view_type="rectangular"
    app:neomorph_shadow_type="outer"
    app:neomorph_elevation="6dp"
    app:neomorph_corner_radius="10dp"
    app:neomorph_background_color="@color/colorPrimary"
    app:neomorph_shadow_color="@color/colorShadow"
    app:neomorph_highlight_color="@color/colorShadowLight"
    android:layout_below="@id/layout_head"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp">
            <ImageView
                android:id="@+id/iv_produk"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/img"/>
            <TextView
                android:id="@+id/tv_produk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Philaneop Orchid Flower"
                android:textColor="#AAAAAA"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:layout_below="@id/iv_produk"/>
            <TextView
                android:id="@+id/tv_harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp. 500.000"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_produk"/>
            <Button
                android:id="@+id/btn_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/bg_btn_add_to_cart"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:text="Add to Cart"
                android:textSize="10dp"
                android:textColor="@color/colorShadowLight"/>
        </RelativeLayout>

    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>