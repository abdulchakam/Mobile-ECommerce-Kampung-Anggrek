<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">
    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:neomorph_view_type="rectangular"
        app:neomorph_shadow_type="outer"
        app:neomorph_elevation="8dp"
        app:neomorph_corner_radius="10dp"
        app:neomorph_background_color="@color/colorPrimary"
        app:neomorph_shadow_color="@color/neomorph_shadow_color"
        app:neomorph_highlight_color="@color/colorShadowLight"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"/>
    </LinearLayout>
    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Produk"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>
    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:id="@+id/layout_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:neomorph_view_type="rectangular"
        app:neomorph_shadow_type="inner"
        app:neomorph_elevation="8dp"
        app:neomorph_corner_radius="10dp"
        app:neomorph_background_color="@color/colorPrimary"
        app:neomorph_shadow_color="@color/neomorph_shadow_color"
        app:neomorph_highlight_color="@color/colorShadowLight"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/card_img_detail"
                android:layout_width="180dp"
                android:layout_height="250dp"
                app:neomorph_view_type="rectangular"
                app:neomorph_shadow_type="outer"
                app:neomorph_elevation="6dp"
                app:neomorph_corner_radius="10dp"
                app:neomorph_background_color="@color/colorPrimary"
                app:neomorph_shadow_color="@color/colorShadow"
                app:neomorph_highlight_color="@color/colorShadowLight"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/iv_produk_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img"/>
            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
            <TextView
                android:id="@+id/tv_nama_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Philaneop Orchid Flower"
                android:layout_below="@id/card_img_detail"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_deskripsi_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanaman Anggrek Bulan Warna Putih, Dilengkapi dengan Vas Premium,"
                android:layout_below="@id/tv_nama_detail"
                android:textSize="15dp"
                android:textColor="#878787"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_harga_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp. O"
                android:layout_below="@id/tv_deskripsi_detail"
                android:textSize="18dp"
                android:textColor="#FF3223"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>
        </RelativeLayout>

    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>



</RelativeLayout>